{
  "name": "DGS Status Checker",
  "version": "0.99",
  "description": "This extension checks for waiting games/messages at DGS, using existing cookies",
  "icons": { "48": "dgs_48.png",
             "128": "dgs_128.png" },
  "background_page": "background.html",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "DragonGoServer Status"
  },
  "permissions": [
    "tabs",
    "http://www.dragongoserver.net/"
  ]
}
